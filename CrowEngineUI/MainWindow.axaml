<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:crowEngineUi="clr-namespace:CrowEngineUI"
        xmlns:assets="clr-namespace:CrowEngineUI.Assets"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CrowEngineUI.MainWindow"
        Title="CrowEngine"
        Icon="">
    
    <Grid RowDefinitions="Auto, Auto, *, 1, 200">
        <!-- Navbar Menu -->
        <crowEngineUi:NavbarMenu Grid.Row="0" Background="#1E1E1E"/>
        
        <!-- Navbar -->
        <crowEngineUi:Navbar Grid.Row="1" Background="#1E1E1E"/>
        
        <Grid Grid.Row="2" ColumnDefinitions="200, 1, *, 1, 200">

            <!-- -->
            <crowEngineUi:LeftTabs/>
            <GridSplitter Grid.Column="1" Background="#1E1E1E" ResizeDirection="Columns"/>
            
            <!-- Editor -->
            <crowEngineUi:MonoGameControl Grid.Column="2" />
            
            <!-- -->
            <GridSplitter Grid.Column="3" Background="#1E1E1E" ResizeDirection="Columns"/>
            <Rectangle Grid.Column="4" Fill="Aqua"/>
        </Grid>
        
        <GridSplitter Grid.Row="3" Background="#1E1E1E" ResizeDirection="Rows"/>
        <assets:BottomTabs Grid.Row="4"/>
    </Grid>
</Window>